# This is the default ansible 'hosts' file.
#
# It should live in /etc/ansible/hosts
#
#   - Comments begin with the '#' character
#   - Blank lines are ignored
#   - Groups of hosts are delimited by [header] elements
#   - You can enter hostnames or ip addresses
#   - A hostname/ip can be a member of multiple groups

# Ex 1: Ungrouped hosts, specify before any group headers.

## green.example.com
## blue.example.com
## 192.168.100.1
## 192.168.100.10
[host]
192.168.189.160 ansible_connection=ssh ansible_user="root" ansible_password="root.2020"
[all:vars]
#nodename="kylin"
[clusters]
192.168.189.160 ansible_connection=ssh ansible_user="root" ansible_password="root.2020" hostname="node1"
192.168.189.220 ansible_connection=ssh ansible_user="root" ansible_password="root.2020" hostname="master"
[clusters:vars]
ntp_server: [""]
#yum源写完整路径，不写的话默认拉取aliyun的yum源
#mirrors: "ftp://1.2.3.4/os/centos7/x86_64/"
#可以写多个，不写不会添加dns
#dns_server: ["8.8.8.8","223.5.5.5"]

[cloud]
192.168.40.143 ansible_user=root ansible_password=kylinos-tc2
192.168.40.143 ansible_connection=ssh   ansible_user=root  ansible_password=kylinos-tc2
# Ex 2: A collection of hosts belonging to the 'webservers' group

## [webservers]
## alpha.example.org
## beta.example.org
## 192.168.1.100
## 192.168.1.110

# If you have multiple hosts following a pattern you can specify
# them like this:

## www[001:006].example.com

# Ex 3: A collection of database servers in the 'dbservers' group

## [dbservers]
## 
## db01.intranet.mydomain.net
## db02.intranet.mydomain.net
## 10.25.1.56
## 10.25.1.57

# Here's another example of host ranges, this time there are no
# leading 0s:

## db-[99:101]-node.example.com

